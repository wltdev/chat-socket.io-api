generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String?   @unique
  password  String?
  Message   Message[]
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
}

model Message {
  id        String    @id @default(uuid())
  message   String
  users     String[]
  sender    User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
}
